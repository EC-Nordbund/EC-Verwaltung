doctype html
html(lang="de")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,initial-scale=1.0")
    meta(name="description" content=description)
    meta(name="theme-color" content=theme_color)
    meta(name="robots" content="noindex")
    title #{name}
    link(rel="manifest" href="/manifest.webmanifest")
    link(rel="icon" href="/favicon.png")
    link(rel="apple-touch-icon" href="/favicon.png")
    each file in files
      if file.endsWith('.js')
        script(type="module" src=file)
      else if file.endsWith('.css')
        link(rel="stylesheet" href=file)
      else
        link(rel="prefetch" href=file)
  body
    noscript
      strong Bitte Javascript aktivieren! Das geht sonst alles nicht...</strong>

    div(id="app")
      style
        | body {
        |   display: grid;
        |   grid-template-areas: ". . ."". c ."". . .";
        |   grid-template-rows: 1fr auto 1fr;
        |   grid-template-columns: 1fr auto 1fr;
        |   background-color: #eeeeee;
        | }
        | 
        | #app {
        |   grid-area: c;
        | }
        | 
        | html {
        |   display: grid;
        |   height: 100%;
        | }  
      iframe(style="min-width: 500px; min-height: 295px; border: none;" src="/loading.html")
    a(id="ec-download" style="display: none")
  